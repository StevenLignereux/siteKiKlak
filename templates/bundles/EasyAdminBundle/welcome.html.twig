{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Administration du site' %}

{% block page_content %}

    <div class="container">
        <div class="row">
            <div class="col-6 alert-info">
                <span class="display-3">{{ countAllUsers['value'] }}</span> utilisateurs
            </div>
            <div class="col-6 alert-success">
                <span class="display-3">{{ countAllCategories['value'] }}</span> cat√©gories
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-12">
                <h3>Liste des articles</h3>
                <ul class="list-group">
                    {% for post in posts %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ post.title }}
                        <span class="badge badge-primary badge-pill">{{ post.category.name }}</span>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
