{% extends 'base.html.twig' %}

{% block title %}KontaKter Klakigone{% endblock %}

{% block body %}
    {% include 'nav.html.twig' %}
    <main>
        <div class="site-content">
            <form class="form-group" method="post">
            <h1 class="text-center"> Nous KontaKter</h1>

                <div class="flex-form">
                    <label for="inputName">Nom</label>
                    <input type="text" name="name" id="inputName" required autofocus>

                    <label for="inputFirstName">Prenom</label>
                    <input type="text"  name="firstname" id="inputFirstName" required autofocus>

                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" id="inputEmail" required autofocus>

                    <label for="inputSubject">Sujet</label>
                    <input type="text" name="subject" id="inputSubject" required autofocus>

                    <label for="inputMessage">Message</label>
                    <textarea name="subject" id="inputSubject" rows="5" cols="33" required autofocus></textarea>

                    <button class="btn"  type="submit">
                        Envoyer un Message
                    </button>
                </div>

            </form>
            {% include 'main/sidebar.html.twig' %}
        </div>
    </main>
    {% include 'footer.html.twig' %}
{% endblock %}
