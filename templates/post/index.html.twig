{% block body %}
    {# ------------------------------------------- Site Content ----------------------------------------------------            -#}
    <div class="site-content">
        <div class="posts">
            {% for post in post %}
                <div class="post-content" data-aos="zoom-in" data-aos-delay="200">
                    <div class="post-image">
                        <div>
                            <img class="img" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.image }}">
                        </div>
                        <div class="post-info flex-row">
                            <span><i class="fas fa-user text-gray"></i>&nbsp;&nbsp;{{ post.user }}</span>
                            <span><i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp; {{ post.createdAt|date("d/m/Y") }}</span>
                        </div>
                    </div>
                    <div class="post-title">
                        <a href="{{ path('post_detail', {slug: post.slug}) }}">{{ post.title }}</a>
                        <p>{{ post.content|striptags|u.truncate(500, '...', false) }}</p>
                        <a href="{{ path('post_detail', {slug: post.slug}) }}">
                            <button class="btn post-btn">
                                Lire la suite &nbsp; <i class="fas fa-arrow-right"></i>
                            </button>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% include 'main/sidebar.html.twig' %}
    </div>
    {# ------------------X------------------------- Site Content ---------------------------X-------------------------            -#}
{% endblock %}
