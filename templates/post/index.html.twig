{% block body %}
    {# ------------------------------------------- Site Content ----------------------------------------------------          -#}
    <div class="site-content">
        <div class="posts">
            {% for post in post %}
                <div class="post-content" data-aos="zoom-in" data-aos-delay="200">
                    <div class="post-image">
                        <div>
                            <img class="img" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="miniature">
                        </div>
                        <div class="post-info flex-row">
                            <span><i class="fas fa-user text-gray"></i>&nbsp;&nbsp;Admin</span>
                            <span><i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp; Janury 14, 2019</span>
                            <span> 2 Comments</span>
                        </div>
                    </div>
                    <div class="post-title">
                        <a href="{{ path('post_detail', {slug: post.slug}) }}">{{ post.title }}</a>
                        <p>{{ post.content|striptags|u.truncate(500, '...', false) }}</p>
                        <a href="{{ path('post_detail', {slug: post.slug}) }}">
                            <button class="btn post-btn">
                                Lire la suite &nbsp; <i class="fas fa-arrow-right"></i>
                            </button>
                        </a>
                    </div>
                </div>
            {% endfor %}


            <div class="pagination flex-row">
                <a href="#"><i class="fas fa-chevron-left"></i></a>
                <a href="#" class="pages">1</a>
                <a href="#" class="pages">2</a>
                <a href="#" class="pages">3</a>
                <a href="#"><i class="fas fa-chevron-right"></i></a>
            </div>
        </div>
        {% include 'main/sidebar.html.twig' %}
    </div>
    {# ------------------X------------------------- Site Content ---------------------------X-------------------------          -#}
{% endblock %}
