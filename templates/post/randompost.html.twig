<div class="popular-post">
    <h2>Suggestion d'artiKles</h2>
    {% for post in post %}
    <div class="post-content" data-aos="flip-up" data-aos-delay="200">
        <div class="post-image">
            <div>
                <img class="img" src="{{ vich_uploader_asset(post, 'imageFile') }}" alt="{{ post.image}}">
            </div>
            <div class="post-info flex-row">
                <span><i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp; {{ post.createdAt|date("d/m/Y") }}</span>
                <span> {{ post.user }}</span>
            </div>
        </div>
        <div class="post-title">
            <a href="{{ path('post_detail', {slug: post.slug}) }}">{{ post.title }}</a>
        </div>
    </div>
</div>
{% endfor %}