{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {% include 'nav.html.twig' %}
    <main>
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="text-center">S'insKrire</h1>

            <div class="flex-row">
                {{ form_start(registrationForm, {'attr': {'class': 'form-group'}} ) }}
                {{ form_row(registrationForm.name, {
                    label: 'Nom'
                }) }}
                {{ form_row(registrationForm.firstname, {
                    label: 'Pr√©nom'
                }) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms, {
                    label: "J'accepte les Konditions d'utilisation"
                }) }}

                <button type="submit" class="btn">S'insKrire</button>
                {{ form_end(registrationForm) }}

                <div class="site-content">
                    {% include 'main/sidebar.html.twig' %}
                </div>

            </div>

    </main>
    {% include 'footer.html.twig' %}
{% endblock %}